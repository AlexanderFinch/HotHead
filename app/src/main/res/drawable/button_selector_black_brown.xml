<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/colorGrey" />
            <gradient android:angle="-90" android:startColor="@color/colorGreyDark" android:endColor="@color/colorAccent"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/colorGrey" />
            <solid android:color="@color/colorAccentDark"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/colorGreyDark" />
            <gradient android:angle="-90" android:startColor="@color/colorBlack" android:endColor="@color/colorAccentDark" />
        </shape>
    </item>
</selector>