<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/colorAccentBlue" />
            <gradient android:angle="-90" android:startColor="@color/colorAccentBlueLighter" android:endColor="@color/colorAccentBlueLight"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/colorAccentBlueLight" />
            <solid android:color="@color/colorAccentBlue"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/colorAccentBlueDark" />
            <gradient android:angle="-90" android:startColor="@color/colorAccentBlueLight" android:endColor="@color/colorAccentBlue" />
        </shape>
    </item>
</selector>
